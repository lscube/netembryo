BEGIN {
    print "/* Generated by genmain.awk */\n",
	"#include <glib.h>\n",
	"\n",
	"int main(int argc, char *argv[])\n",
	"{\n",
	"    g_test_init(&argc, &argv, NULL);\n";
}

{
    suitename = $2;
    sub("^.*tests/test_", "", suitename);
    sub("\\.c$", "", suitename);
    testname = $1;
    sub("test_", "", testname);

    printf "extern void %s();\n", $1;
    printf "g_test_add_func(\"/%s/%s\", %s);\n",
	suitename, testname, $1;
}

END {
    print "\n",
	"   return g_test_run();\n",
	"}\n";
}
